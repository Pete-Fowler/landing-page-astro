---
import { Image } from "astro:assets";
import dpImage from "../assets/images/dp.png";

interface Props {
    about: {
        title: string;
        paragraphs: string[];
    };
}

const { about } = Astro.props;
---

<section class="container">
    <div>
        <h2>{about.title}</h2>
        {about.paragraphs.map(pText => (
            <p>{pText}</p>
        ))}
    </div>
    <div class="image-container">
        <Image
            class="image"
            src={dpImage}
            alt="Pete Fowler"
            height={250}
            width={250}
        />
    </div>
</section>
<style>
    section {
        display: flex;
        justify-content: space-between;
    }

    @media screen and (max-width: 768px) {
        section {
            flex-direction: column;
        }
    }

    p {
        max-width: 60ch;
    }
    .image-container {
        padding: 2rem;
        padding-top: 4rem;
        display: flex;
        justify-content: center;
    }

    .image {
        border-radius: 5px;
        filter: grayscale(0%);
        filter: gray;
        -webkit-filter: grayscale(0%);
        filter: none;
        transition: 1s ease;

    }

    .image:hover {
        filter: grayscale(100%);
        -webkit-filter: grayscale(100%);
        -webkit-transition: all 1s ease;
    }
</style>
