---
import Link from './ui/Link.astro';
interface Props {
    get_in_touch: {
        title: string;
        paragraphs: string[];
        button: {
            text: string;
            href: string;
        };
    };
}

const { get_in_touch } = Astro.props;
---
<section class="container">
    <h2>{get_in_touch.title}</h2>
    {get_in_touch.paragraphs.map(pText => (
        <p>{pText}</p>
    ))}
    <Link href={get_in_touch.button.href}>{get_in_touch.button.text}</Link>
</section>

<style>
h2 {
    color: var(--gray-dark);
    font-size: 2rem;
}

section {
    display: flex;
    flex-direction: column;
    align-items: center;
}
</style>