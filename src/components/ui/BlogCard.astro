---
interface Props {
    post: {
        title: string;
        date: string;
        author: string;
    }
}

const { post } = Astro.props;
---
<article>
    <p class="date">{new Date(post.date).toLocaleDateString('en-US', { dateStyle: 'long' })}</p>
    <h4>{post.title}</h4>
    <p class="author">{post.author}</p>
</article>

<style>
    h4 {
        color: var(--gray-dark);
    }
article {
        margin-top: 0.5rem;
        box-shadow: 0 0 0.25rem var(--slate-light);
        border-radius: 1rem;
        padding: 1rem;
    }

    article:hover {
        background-color: var(--slate);
        transition: all 0.3s;
    }


    p.date {
        color: var(--accent);
        font-size: 1rem;
        margin: 0;
        margin-bottom: 0.5rem;
    }

    p.author {
        color: var(--gray);
        font-size: 1rem;
        margin: 0;
    }
</style>