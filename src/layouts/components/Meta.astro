---
interface Props {
    site_title: string;
    site_description: string;
}

const { site_title, site_description } = Astro.props;
const current_url = Astro.request.url;

---
<meta charset="UTF-8" />
<meta name="description" content={site_description} />
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<meta property="og:title" content={site_title} />
<meta property="og:description" content={site_description} />
<meta property="og:url" content={current_url} />
<meta property="og:type" content="website" />

<meta name="msapplication-TileColor" content="#da532c">

<meta name="theme-color" content="#d0cddc" media="(prefers-color-scheme: light)">
<meta name="theme-color" content="#040924" media="(prefers-color-scheme: dark)">

