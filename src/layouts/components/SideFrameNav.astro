---
interface Props {
	email: string;
	socials: {
		linkedin: string;
		twitter: string;
		github: string;
	};
}
const { email, socials } = Astro.props;
---
<nav class="socials">
    <a href={socials.linkedin} title="LinkedIn" target="_blank">in</a>
    <a href={socials.github} title="GitHub" target="_blank">gh</a>
</nav>
<nav class="email">{email}</nav>
<style>
	nav.socials {
		position: fixed;
		bottom: 2rem;
		right: 2rem;
		width: 2rem;
		display: flex;
		flex-direction: column;
		padding-bottom: 2rem;
		border-bottom: 0.5rem solid var(--accent-alt);
	}

	nav.socials a {
		color: var(--primary);
		text-decoration: none;
		font-size: 1.5rem;
		margin-bottom: 1rem;
		border: 1px solid var(--text);
		display: flex;
		justify-content: center;
		align-items: center
	}

	nav.socials a:hover {
		color: var(--text-dark);
		transform: scale(1.2);
		border: 1px solid var(--primary);
		transition: all 0.3s;
	}


	nav.email {
		position: fixed;
		bottom: 2rem;
		left: 2rem;
		transform-origin: top left;
		rotate: 270deg;
		padding-left: 2rem;
		border-left: 0.5rem solid var(--accent-alt);
	}

	nav.email:hover {
		color: var(--primary);
		transform: scale(1.1);
		transition: all 0.3s;
	}

	@media screen and (max-width: 960px) {
		nav.socials, nav.email {
			display: none;
		}
		
	}

</style>