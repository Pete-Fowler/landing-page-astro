---
import Navbar from './Navbar.astro';
import Meta from './Meta.astro';
import SideFrameNav from './SideFrameNav.astro';
import '../styles/global.css';
interface Props {
	site_title: string;
	site_description: string;
	email: string;
	socials: {
		linkedin: string;
		twitter: string;
		github: string;
	};
}

const { site_title, site_description, email, socials } = Astro.props;

// TODO: Add the left and right social, email menus (not on mobile)
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<Meta site_title={site_title} site_description={site_description}/>
		<title>{site_title}</title>
	</head>
	<body>
		<Navbar/>
		<slot />
		<SideFrameNav email={email} socials={socials}/>
	</body>
</html>