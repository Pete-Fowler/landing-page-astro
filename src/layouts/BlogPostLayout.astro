---
import Navbar from "./ui/Navbar.astro";
import Meta from "./ui/Meta.astro";
import SideFrameNav from "./ui/SideFrameNav.astro";
import BlogFooterNav from "./ui/BlogFooterNav.astro";
import "../styles/global.css";
import ThemeIcon from "./ui/ThemeIcon.astro";
interface Props {
	site_title: string;
	site_description: string;
	email: string;
	socials: {
		linkedin: string;
		twitter: string;
		github: string;
	};
}

const { site_title, site_description, email, socials } = Astro.props;

// TODO: Add the left and right social, email menus (not on mobile)
---

<!doctype html>
<html lang="en">
	<head>
		<Meta site_title={site_title} site_description={site_description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{site_title}</title>
		<style>
			body { padding: 8rem 2rem; }
			.theme-toggle { position: absolute; top: 1rem; right: 1rem; }
		</style>
	</head>
	<body class="dark">
		<div class="theme-toggle">
			<ThemeIcon/>
		</div>
		<slot />
		<SideFrameNav email={email} socials={socials} />
		<BlogFooterNav />
	</body>
</html>
